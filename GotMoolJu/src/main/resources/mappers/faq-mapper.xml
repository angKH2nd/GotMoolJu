<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="faqMapper">
	<resultMap id ="faqResult" type="Faq">
       <result column="faq_no" property="faqNo"/>
       <result column="faq_title" property="faqTitle"/>
       <result column="faq_content" property="faqContent"/>
       <result column="faq_writer" property="faqWriter"/>
       <result column="faq_count" property="faqCount"/>
       <result column="faq_create_date" property="faqCreateDate"/>
    </resultMap>

	<select id="selectFaqList" resultMap="faqResult">
		select *
          from ( 
                select
                       faq_no
                     , faq_title
                     , faq_content
                     , faq_writer
                     , faq_count
                     , to_char(faq_create_date, 'YYYY-MM-DD') as "create_date"
                  from tb_faq   
                 where faq_status = 'Y'
                 order
                    by faq_count desc
                 )
         order by rownum desc    
	</select>
		
</mapper>
